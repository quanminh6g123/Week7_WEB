<!DOCTYPE html>

<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>All Blogs</h1>
    <div class="container">
	
      <div class="table">
        <div class="table-header">
          <div class="header__item"><a id="id" class="filter__link" href="#">ID</a></div>
          <div class="header__item"><a id="title" class="filter__link filter__link--number" href="#">Title</a></div>
          <div class="header__item"><a id="body" class="filter__link filter__link--number" href="#">Body</a></div>
          <div class="header__item"><a id="action" class="filter__link filter__link--number" href="#">CRUD</a></div>
        </div>
        <div class="table-content">
          <% data.forEach(item =>{ %>
          <div class="table-row">		
            <div class="table-data"><%= item._id %> </div>
            <div class="table-data"><%= item.title %> </div>
            <div class="table-data"><%= item.body %> </div>
            <div class="table-data"><a href="form-update/<%=item._id %>">Update</a></div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
